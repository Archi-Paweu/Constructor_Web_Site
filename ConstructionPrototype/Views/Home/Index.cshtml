@model IEnumerable<ConstructionPrototype.Data.Entities.HomeArticle>

@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <p>Learn about building Web apps with ASP.NET Core.</p>
</div>


@if (Model.Count() > 0)
{
    <div class="table" style="width:100%">

        @foreach (var item in Model)
        {
            <div class="join-us-padding home-art d-grid mx-auto">
                <div class="row g-3">
                    <div class="col-sm">
                        <h3>@item.Title</h3>
                        <h5>@item.ShortDescription</h5>
                    </div>
                    <p class="col-sm-6">@item.Image</p>
                </div>
                <p>@item.Description</p>
            </div>
        }
    </div>
}
else
{
    <div class="text-center">
        <p>No news yet.</p>
    </div>
}
