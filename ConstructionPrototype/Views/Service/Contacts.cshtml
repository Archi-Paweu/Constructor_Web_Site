
@{
    ViewData["Title"] = "Contacts";
}



<div class="text-center">
    <h1>@ViewData["Title"]</h1>

    <p>Recruiting info. Grid</p>
    <p>send email for recruitment@mail.com</p>
</div>


<div class="container">
    <h3 class="text-center">@ViewData["Title"]</h3>
    <p class="text-center"><em>You got some questions?</em></p>
    <p class="text-center"><em>Let us know!</em></p>

    <div class="row test">
        <div class="col-md-4">
            <p>Contact us at:</p>
            <p><span class="glyphicon glyphicon-map-marker"></span>Bydgoszcz, Poland</p>
            <p><span class="glyphicon glyphicon-phone"></span>Phone: +48 123 456 789</p>
            <p><span class="glyphicon glyphicon-envelope"></span>Email: office@mail.com</p>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-sm-6 form-group">
                    <input class="form-control" id="name" name="name" placeholder="Name" type="text" required>
                </div>
                <div class="col-sm-6 form-group">
                    <input class="form-control" id="email" name="email" placeholder="Email" type="email" required>
                </div>
            </div>
            <textarea class="form-control" id="comments" name="comments" placeholder="Comment" rows="5"></textarea>
            <div class="row">
                <div class="col-md-12 form-group">
                    <button class="btn pull-right" type="submit">Send</button>
                </div>
            </div>
        </div>
                

        <div class="mapouter">
            <div class="gmap_canvas" position: relative>
                <iframe width="1000" height="450" id="gmap_canvas" src="https://maps.google.com/maps?q=bu%C5%82garska%203%20bydgoszcz&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                
            </div>
        </div>

    </div>
</div>
